@import '../bower_components/brick-common/styles/mixins'
@import '../bower_components/brick-common/styles/params'

brick-tabbar {

  display: block;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-align: center;
  margin: 0;
  padding: 0;
  flexbox();

  & > brick-tabbar-tab{

    flex(1);
    box-sizing(border-box);
    display: inline-block;
    min-width:auto;
    min-height:auto;
    vertical-align: middle;
    cursor: pointer

    & > *:only-child{
      vertical-align: top;
      height: 100%;
      width: 100%;
      margin: 0 !important;
    }

  }
}
