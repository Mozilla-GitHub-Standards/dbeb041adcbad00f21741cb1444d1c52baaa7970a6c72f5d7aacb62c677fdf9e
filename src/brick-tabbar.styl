@import '../bower_components/brick-common/styles/mixins'
@import '../bower_components/brick-common/styles/params'

brick-tabbar{
    display: block;
    flexbox();
    width: 100%;
    overflow: hidden;
    white-space: nowrap;
    text-align: center;

    & > brick-tabbar-tab{
        flex(1);

        box-sizing(border-box);
        display: inline-block;
        min-width:auto;
        min-height:auto;
        vertical-align: middle;
        & > *:only-child{
            vertical-align: top;
            height: 100%;
            width: 100%;
            margin: 0 !important;
        }
    }
}
